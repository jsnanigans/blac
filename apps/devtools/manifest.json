{
  "name": "Blac debugging extension",
  "version": "0.1",
  "description": "Helps debug Blac apps.",
  "background": {
    "service_worker": "dist/background/index.js"
  },
  "devtools_page": "dist/tools/index.html",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content/index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/tools/inject_script.js",
        "dist/content/index.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
